{
  "name": "giignore",
  "version": "1.0.1",
  "description": "generate .gitignore file based on templates collection",
  "homepage": "https://github.com/alpacioDev/giignore",
  "author": {
    "name": "Abdelhak Akermi",
    "email": "alpacastuido.dev@gmail.com ",
    "url": "abdelhakakermi.me"
  },
  "bin": {
    "giignore": "lib/cli.js"
  },
  "files": [
    "lib",
    "fixture"
  ],
  "keywords": [
    "gitignore git generate"
  ],
  "scripts": {
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "prepare": "lec lib/cli.js -c LF"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.2",
    "eslint-plugin-prettier": "^2.6.0",
    "execa": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lec": "^1.0.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.11.1",
    "promise": "^8.0.2",
    "tempy": "^0.2.1"
  },
  "dependencies": {
    "conf": "^2.0.0",
    "ignore-case": "^0.1.0",
    "inquirer": "^6.2.0",
    "inquirer-search-checkbox": "^1.0.0",
    "line-reader": "^0.4.0",
    "log-symbols": "^2.2.0",
    "meow": "^3.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "alpacioDev/giignore",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT"
}
